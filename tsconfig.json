{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"jsx": "preserve",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"lib": ["es5"],
		"noLib": false,
		"rootDir": "src",
		"skipLibCheck": false,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node"
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "example"]
}
