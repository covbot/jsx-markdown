{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"jsx": "react-jsx",
		"jsxImportSource": "@covbot/jsx-markdown",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"lib": ["es5"],
		"noLib": false,
		"skipLibCheck": false,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "NodeNext"
	},
	"include": ["src", "tests"],
	"exclude": ["node_modules", "example"]
}
